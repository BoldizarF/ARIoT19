<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_launcher" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginBottom="100dp"/>
    <TextView
            android:text="Please enter keycode in order to access dashboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/editText" android:textSize="18sp"/>
    <EditText android:layout_width="250dp" android:layout_height="50dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              android:inputType="number"
              android:id="@+id/editText" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/login_btn"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintStart_toStartOf="@+id/editText"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:background="@android:color/transparent" android:textSize="18sp"/>
    <TextView
            android:text="Hint: APTIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/editText" app:layout_constraintStart_toStartOf="@+id/editText"/>
</androidx.constraintlayout.widget.ConstraintLayout>
